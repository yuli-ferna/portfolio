---
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import ContactLinks from "../molecules/ContactLinks.astro";
import ContactForm from "../organisms/ContactForm";


const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang); 
---
<div class="w-screen h-screen flex flex-col justify-around md:flex-row gap-10 px-4 algin-middle">
  <div class="max-w-100 flex flex-col gap-10 justify-center align-items-center">
    <h1 class="title">{t("contact")["title"]}</h1>
    <p>{t("contact")["description"]}</p>
    <ContactLinks />
  </div>
  <div class="w-[400px] h-full">
    <ContactForm lang={lang} client:only="react" />
  </div>
</div>