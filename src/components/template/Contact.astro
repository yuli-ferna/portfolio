---
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import ContactLinks from "../molecules/ContactLinks.astro";
import ContactForm from "../organisms/ContactForm";


const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang); 
---
<div class="w-fit md:w-screen md:h-screen flex flex-col justify-around md:flex-row gap-5 md:gap-10 algin-middle pt-30 px-4 md:pt-0">
  <div class="max-w-80 h-screen md:h-fit md:max-w-100 flex flex-col gap-10 justify-center items-center">
    <h1 class="title">{t("contact")["title"]}</h1>
    <p>{t("contact")["description"]}</p>
    <ContactLinks />
  </div>
  <div class="max-w-80 h-screen md:h-fit md:w-[400px]">
    <ContactForm lang={lang} client:visible />
  </div>
</div>