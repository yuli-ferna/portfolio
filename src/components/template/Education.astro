---
import Timeline from "../organisms/Timeline.astro";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import EducationAndCertificate from "../atoms/icons/EducationAndCertificate";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const education = t("education") ?? {};
const items = [ ...(education["titles"] ?? [])];
---

<div
  class="w-fit min-h-screen flex flex-col items-center justify-center relative education-section pt-50 pb-50"
>
  <div class="flex flex-col md:flex-row gap-4 items-center mb-5">
    <h1 class="title w-min mb-6">{education["title"]}</h1>
    <EducationAndCertificate client:only="react" />
  </div>
  <div class="md:max-w-100 text-lg px-3 md:px-0">{education["description"]}</div>
  <div class="mt-17">
    <Timeline items={items} type="education" />
  </div>
</div>
