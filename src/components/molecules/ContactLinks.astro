---
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import Gmail from "../atoms/icons/Gmail";
import Github from "../atoms/icons/Github";
import Linkedin from "../atoms/icons/Linkedin";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

---
<div class="flex flex-wrap justify-center items-center gap-8">
  {t("contact") && Object.keys(t("contact")!["links"]).map((link) => {
    const icon = () => {
      switch (link) {
        case "github":
          return <Github />;
        case "linkedin":
          return <Linkedin />;
        case "gmail":
          return <Gmail />;
        default:
          return null;
      }
    };
    return <a href={t("contact")!["links"][link].link} title={link} class="icon-button" target="_blank" rel="noopener noreferrer" aria-label={`Go to ${link}`}>
      {icon()}
    </a>
  })}
</div>