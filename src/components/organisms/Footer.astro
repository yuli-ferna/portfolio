---
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import ContactLinks from "../molecules/ContactLinks.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const contact = t("contact") ?? {};
const footer = t("footer") ?? {};
---

<footer
  id="footer"
  class="pt-10 pb-30 px-4 text-center border-secondary bg-container-item/20 text-secondary"
>
  <div class="flex flex-col md:flex-row justify-around gap-10">
    <div class="flex flex-col justify-between gap-8">
      <p class="title text-[28px]">{contact["myLinks"]}</p>
      <ContactLinks />
    </div>
    <div class="max-w-80 flex flex-col gap-2 justify-center self-center md:justify-start">
      <p class="flex gap-2">
        {footer["builtWith"]} <a
          class="flex gap-2"
          href="https://astro.build"
          target="_blank"
          rel="noopener noreferrer"
          ><img src="/astro.svg" alt="Astro Icon" /> Astro</a
        >
      </p>
      <p class="flex gap-2">
        {footer["styledWith"]} <a
          class="flex gap-2"
          href="https://astro.build"
          target="_blank"
          rel="noopener noreferrer"
          ><img src="/tailwind.svg" alt="TailwindCSS Icon" /> TailwindCSS</a
        >
      </p>
      <p class="text-left">
        {footer["iconsFrom"]} <a
          href="http://streamlinehq.com"
          target="_blank"
          rel="noopener noreferrer">Streamlinehq.com</a
        > {footer["licensedUnder"]} <a
        href="https://creativecommons.org/licenses/by/4.0/"
        target="_blank"
        rel="noopener noreferrer">CC BY 4.0</a>
      </p>
    </div>

  </div>
  <p class="flex gap-2 justify-center border-t-1 border-pink-400 pt-3 mt-10">
    &copy; {new Date().getFullYear()} Yuliana Fernandez. {footer["allRightsReserved"]}.
  </p>
</footer>
